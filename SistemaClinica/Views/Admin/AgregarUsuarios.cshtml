<head>
    <link rel="stylesheet" href="/css/site.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>

<div class="Fondo" style="font-family: 'Montserrat' , sans-serif;">
    <div class="container-fluid">
        <div class="login-container text-center mt-5 pt-5 justify-content-center align-content-center d-flex" style="margin-left: 5%; margin-right: 5%;">

            <!-- Contenedor del formulario -->
            <div class="form-container">
                <!-- Título -->
                <div class="form-title">
                    FORMULARIO PARA CREAR USUARIO
                </div>

                <!-- Formulario -->
                <form asp-action="CrearUsuario" method="post">
                    <div class="row">
                        <!-- Primera columna -->
                        <div class="col-md-6">
                            <label for="nombre" class="form-label">Nombre:</label>
                            <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Ingrese el nombre" required>

                            <label for="usuario" class="form-label">Usuario:</label>
                            <input type="text" id="username" name="username" class="form-control" placeholder="Ingrese el usuario" required>

                            <label for="contrasena" class="form-label">Contraseña:</label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Ingrese la contraseña" required>

                            <!-- Campos específicos por cargo -->
                            <div id="campoApellido" style="display: none;">
                                <label for="apellido" class="form-label">Apellido:</label>
                                <input type="text" id="apellido" name="apellido" class="form-control" placeholder="Ingrese el apellido">
                            </div>

                        </div>

                        <!-- Segunda columna -->
                        <div class="col-md-6">
                            <div style="margin-bottom: 15px;">
                                <!-- Campos comunes -->
                                <label for="email" class="form-label">Email:</label>
                                <input type="email" id="email" name="email" class="form-control" placeholder="Ingrese el correo electrónico">

                                <label for="telefono" class="form-label">Teléfono:</label>
                                <input type="text" id="telefono" name="telefono" class="form-control" placeholder="Ingrese el teléfono">

                                <label for="tipo_usuario" class="form-label">Cargo:</label>
                                <select id="tipo_usuario" name="tipo_usuario" class="form-select" required onchange="toggleFields()">
                                    <option value="">Seleccione un cargo</option>
                                    <option value="administrador">Administrador</option>
                                    <option value="secretaria">Secretaria</option>
                                    <option value="enfermera">Enfermera</option>
                                    <option value="medico">Médico</option>
                                    <option value="farmacia">Farmacia</option>
                                </select>
                            </div>

                            <div id="campoEspecialidad" style="display: none;">
                                <label for="especialidad" class="form-label">Especialidad:</label>
                                <input type="text" id="especialidad" name="especialidad" class="form-control" placeholder="Ingrese la especialidad">
                            </div>

                            <div id="campoTurno" style="display: none;">
                                <label for="turno" class="form-label">Turno:</label>
                                <input type="text" id="turno" name="turno" class="form-control" placeholder="Ingrese el turno">
                            </div>

                        </div>
                    </div>

                    <!-- Botón para crear usuario -->
                    <div class="text-center mt-4">
                        <input type="submit" class="btn btn-primary" style="width: 50%; padding: 10px; margin-bottom: 10px; border-radius: 4px;" value="CREAR USUARIO" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Muestra u oculta los campos según el cargo seleccionado
    function toggleFields() {
        let tipo_usuario = document.getElementById("tipo_usuario").value;

        // Oculta todos los campos específicos por defecto
        document.getElementById("campoApellido").style.display = "none";
        document.getElementById("campoEspecialidad").style.display = "none";
        document.getElementById("campoTurno").style.display = "none";

        // Muestra los campos según el cargo
        if (tipo_usuario === "secretaria" || tipo_usuario === "enfermera" || tipo_usuario === "medico") {
            document.getElementById("campoApellido").style.display = "block";
        }
        if (tipo_usuario === "medico") {
            document.getElementById("campoEspecialidad").style.display = "block";
        }
        if (tipo_usuario === "enfermera") {
            document.getElementById("campoTurno").style.display = "block";
        }
    }
</script>