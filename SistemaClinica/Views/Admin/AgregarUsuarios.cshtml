@model SistemaClinica.Models.empleado

@{
    ViewData["Title"] = "Formulario para Crear Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/site.css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="Fondo" style="font-family: 'Montserrat', sans-serif;">
        <div class="container-fluid">
            <div class="container-fluid login-container text-center mt-3 pt-5 justify-content-center align-content-center"
                 style="max-width: 800px; margin-left: auto; margin-right: auto; padding-bottom: 30px; border-radius: 8px; padding-top: 10px;">
                <div class="container mt-3">
                    <div class="card">
                        <div class="card-header text-center bg-success text-white">
                            <h3>FORMULARIO PARA CREAR USUARIO</h3>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <!-- Cambiamos el 'asp-action' para que corresponda al método 'AgregarEmpleado' -->
                                <form asp-action="AgregarEmpleado" method="post">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            @Html.LabelFor(model => model.nombre, "Nombre:")
                                            @Html.TextBoxFor(model => model.nombre, new { @class = "form-control", required = "required" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            @Html.LabelFor(model => model.correo, "Email:")
                                            @Html.TextBoxFor(model => model.correo, new { @class = "form-control", required = "required", type = "email" })
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            @Html.LabelFor(model => model.usuario, "Usuario:")
                                            @Html.TextBoxFor(model => model.usuario, new { @class = "form-control", required = "required" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            @Html.LabelFor(model => model.id_rol, "Cargo:")
                                            @Html.DropDownListFor(model => model.id_rol, new SelectList(new[]
                                                     {
                                            new { Value = "1", Text = "Administrador" },
                                            new { Value = "2", Text = "Doctor" },
                                            new { Value = "3", Text = "Enfermera" },
                                            new { Value = "4", Text = "Secretaria" }
                                            }, "Value", "Text"), "Seleccione un Cargo", new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            @Html.LabelFor(model => model.contrasenya, "Contraseña:")
                                            @Html.PasswordFor(model => model.contrasenya, new { @class = "form-control", required = "required" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            @Html.LabelFor(model => model.direccion, "Dirección:")
                                            @Html.TextBoxFor(model => model.direccion, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            @Html.LabelFor(model => model.telefono, "Teléfono:")
                                            @Html.TextBoxFor(model => model.telefono, new { @class = "form-control", required = "required", type = "tel" })
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary mt-3">CREAR USUARIO</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
